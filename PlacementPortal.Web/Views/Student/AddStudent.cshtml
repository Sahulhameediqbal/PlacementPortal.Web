<main id="main" class="main">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Student</h5>
                    <div class="row">
                        <div id="message"></div>
                        <div class="" id="profile-edit">

                            <!-- Profile Edit Form -->

                            <div class="row mb-3">
                                <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="fullName" type="text" class="form-control" id="Name">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="about" class="col-md-4 col-lg-3 col-form-label">CollegeId</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-select" id="CollegeId" aria-label="Default select example">
                                        <option selected>Select College</option>
                                        <option value="DC43B2F5-0978-49DE-AE7B-977A4425BF73">Company</option>
                                        <option value="22925928-880A-4261-BC6B-ABA4BB3FE5FA">College</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="company" class="col-md-4 col-lg-3 col-form-label">DepartmentId</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-select" id="DepartmentId" aria-label="Default select example">
                                        <option selected>Select Department</option>
                                        <option value="DC43B2F5-0978-49DE-AE7B-977A4425BF73">Company</option>
                                        <option value="22925928-880A-4261-BC6B-ABA4BB3FE5FA">College</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Job" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="job" type="text" class="form-control" id="Email">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Country" class="col-md-4 col-lg-3 col-form-label">PhoneNumber</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="job" type="text" class="form-control" id="PhoneNumber">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Rollumber</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="job" type="text" class="form-control" id="Rollumber">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Gender</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-select" id="GenderId" aria-label="Default select example">
                                        <option selected>Select Gender</option>
                                        <option value="m">Male</option>
                                        <option value="f">Female</option>
                                        <option value="t">Transgender</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">DOB</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="date" class="form-control" id="DOB">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Course Start</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="CourseStart" type="text" class="form-control" id="CourseStart">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Course End</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="CourseEnd" type="text" class="form-control" id="CourseEnd">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">CGPA</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="job" type="text" class="form-control" id="CGPA">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                <div class="col-md-8 col-lg-9">
                                    <textarea name="about" class="form-control" id="Address" style="height: 100px"></textarea>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Address" class="col-md-4 col-lg-3 col-form-label">IsActive</label>
                                <div class="col-md-8 col-lg-9">
                                    <input class="form-check-input" type="checkbox" id="IsActive" checked>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-12 text-end">
                                    <input type="button" class="btn btn-primary" value="Save Changes" id="btnStudent" />
                                </div>
                            </div>

                            <!-- End Profile Edit Form -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</main><!-- End #main -->

